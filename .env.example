# Environment variables for the Ansible Agent
# Copy this file to .env and fill in your values

# AWX Configuration
AWX_API_ENDPOINT=https://your-awx-instance.com
AWX_USERNAME=your-username
AWX_PASSWORD=your-password
# OR use token instead of username/password
# AWX_TOKEN=your-api-token

# Choose either template OR workflow (not both)
AWX_TEMPLATE_NAME=your-template-name
# AWX_WORKFLOW_NAME=your-workflow-name

# Rate Limiting
GLOBAL_RATE_LIMIT=100 per hour
PER_IP_RATE_LIMIT=1 per 5 minutes

# Redis for rate limiting (optional, will use in-memory if not provided)
REDIS_URL=redis://redis:6379

# Security
MAX_HOSTNAME_LENGTH=253
MIN_HOSTNAME_LENGTH=1

# Application
PORT=5000
FLASK_ENV=production